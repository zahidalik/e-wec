<% if @activity.errors.any? %>
  <div class="ui error message">
    <i class="close icon"></i>
    <div class="header">
      <%= pluralize(@activity.errors.count, "error") %> prohibited Activity from being added:
    </div>
    <ul class="list">
      <% @activity.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="ui center aligned raised segment">
    <button class="ui primary basic button"><strong>Tutor's Name: </strong><%= @classroom.tutor.name %></button>
    <button class="ui primary basic button"><strong>Class: </strong><%= @classroom.standard.name %></button>
    <button class="ui primary basic button"><strong>Subject: </strong><%= @classroom.subject.name %></button>
</div>

<%= form_for @activity, html: { class: "ui form", role: 'form'} do |f| %>
  <div class="ui piled segment">
    <div class="field">
      <%= f.label :topic, "Topic" %>
      <div class="ui left icon input">
        <%= f.text_field :topic, placeholder: "Topic" %>
        <i class="file icon"></i>
      </div>
    </div>
  </div>
  <div class="ui very padded segment">
    <%= f.label :activity, "Activity" %>
    <%= f.rich_text_area :activity %>
  </div>
  <div class="ui very relaxed segment">
    <%= f.label :activity_video, "Activity related video" %>
    <%= f.file_field :activity_video %>
  </div>
  <div class="ui very relaxed segment">
    <%= f.label :activity_audio, "Activity related audio file" %>
    <%= f.file_field :activity_audio %>
  </div>
  <div class="ui very relaxed segment">
    <%= f.label :activity_file, "Activity related file" %>
    <%= f.file_field :activity_file %>
  </div>
    <%= f.submit class: "ui green button" %>
<% end %>

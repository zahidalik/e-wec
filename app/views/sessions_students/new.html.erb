<h2 class="ui center aligned icon header">
  <i class="circular user orange icon"></i>
  Welcome Student<br>
  Please Log In
</h2>

<div class="ui placeholder segment">
  <div class="ui raised very padded segment container">
    <%= form_for(:sessions_student, html: { class: "ui form", role: 'form'}, url: signin_student_path) do |f| %>
      <div class="field">
        <%= f.label :name, "Username" %>
        <div class="ui left icon input">
          <%= f.text_field :name, placeholder: "Username" %>
          <i class="user icon"></i>
        </div>
      </div>
      <div class="field">
        <%= f.label :password, "Password" %>
        <div class="ui left icon input">
          <%= f.password_field :password %>
          <i class="lock icon"></i>
        </div>
      </div>
      <%= f.button "Login", class: "ui orange submit button" %>
    <% end %>
  </div>
</div>

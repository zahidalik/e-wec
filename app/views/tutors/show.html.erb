<h2 class="ui center aligned icon header">
  <i class="circular orange desktop icon"></i>
  <%= @tutor.name %>&apos;s Dashboard
</h2>

<div class="ui placeholder segment">
  <div class="ui two column stackable center aligned grid">
    <div class="ui vertical divider">Or</div>
    <div class="middle aligned row">
      <div class="column">
        <div class="ui icon header">
          <i class="violet building outline icon"></i>
        </div>
        <div class="field">
          <%= link_to "All classes", standards_path, class: "ui primary button" %>
        </div>
      </div>
      <div class="column">
        <div class="ui icon header">
          <i class="purple users icon"></i>
          Students
        </div>
        <div class="ui primary button">
          student
        </div>
      </div>
    </div>
  </div>
</div>

<div class="ui left demo vertical inverted sidebar labeled icon menu">
  <div class="item">
    <i class="user icon"></i>
    Name: <%= @tutor.name %>
  </div>
  <div class="item">
    <i class="phone icon"></i>
    Contact Number: <%= @tutor.contact %>
  </div>
  <div class="item">
    <i class="address card outline icon"></i>
    Address: <%= @tutor.address %>
  </div>
  <%= link_to edit_tutor_path(@tutor), class: "item" do %>
    <i class="edit icon"></i> Click to edit your profile
  <% end %>

</div>

<h2 class="ui center aligned icon header">
  <i class="circular orange desktop icon"></i>
  <%= @student.name %>&apos;s Dashboard
  <div>
    Class: <%= @student.standards.last.name %>
  </div>
</h2>

<% if student_logged_in? %>
  <div class="ui center aligned header">
    <%= link_to "New Answer", new_answer_path, class: "ui primary button" %>
  </div>
<% end %>

<div class="ui left demo vertical inverted sidebar labeled icon menu">
  <div class="item">
    <i class="user icon"></i>
    Name: <%= @student.name %>
  </div>
  <div class="item">
    <i class="phone icon"></i>
    Contact Number: <%= @student.contact %>
  </div>
  <div class="item">
    <i class="address card outline icon"></i>
    Address: <%= @student.address %>
  </div>
  <div class="item">
    <i class="user icon"></i>
    Gender: <%= @student.gender %>
  </div>
  <div class="item">
    <i class="male icon"></i>
    Father's Name: <%= @student.father_name %>
  </div>
  <div class="item">
    <i class="female icon"></i>
    Mother's Name: <%= @student.mother_name %>
  </div>
  <div class="item">
    <i class="user icon"></i>
    Guardian: <%= @student.guardian_name %>
  </div>
  <% if student_logged_in? %>
    <%= link_to edit_student_path(@student), class: "item" do %>
      <i class="edit icon"></i> Click to edit your profile
    <% end %>
  <% end %>
</div>

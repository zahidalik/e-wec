<% if @tutor.errors.any? %>
  <div class="ui error message">
    <i class="close icon"></i>
    <div class="header">
      <%= pluralize(@tutor.errors.count, "error") %> prohibited Tutor from being added:
    </div>
    <ul class="list">
      <% @tutor.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="ui piled segment">
  <%= form_for @tutor, html: { class: "ui form", role: 'form'} do |f| %>
    <div class="field">
      <%= f.label :name, "Username" %>
      <div class="ui left icon input">
        <%= f.text_field :name, placeholder: "Username" %>
        <i class="user icon"></i>
      </div>
    </div>
    <div class="field">
      <%= f.label :contact, "Contact Number" %>
      <div class="ui left icon input">
        <%= f.text_field :contact, placeholder: "+255 ..." %>
        <i class="phone icon"></i>
      </div>
    </div>
    <div class="field">
      <%= f.label :address, "Address" %>
      <div class="ui left icon input">
        <%= f.text_field :address, placeholder: "Kibaha ..." %>
        <i class="address book icon"></i>
      </div>
    </div>
    <div class="field">
      <%= f.label :password, "Password" %>
      <div class="ui left icon input">
        <%= f.password_field :password %>
        <i class="lock icon"></i>
      </div>
    </div>
    <div class="field">
     <div class="ui toggle checkbox">
       <%= f.check_box :admin, class: "hidden" %>
       <%= f.label :admin %>
     </div>
    </div>
    <%= f.submit class: "ui green submit button" %>
  <% end %>
</div>

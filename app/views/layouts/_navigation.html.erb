<% if current_tutor %>
  <%= link_to tutor_path(current_tutor), class: "item" do %>
    <i class="settings icon"></i> My profile
  <% end %>
  <div class="right menu">
    <div class="ui dropdown item">
      <%= current_tutor.name %> <i class="dropdown icon"></i>
      <div class="menu">
        <%= link_to edit_tutor_path(current_tutor), class: "item" do %>
          <i class="edit icon"></i> Edit profile
        <% end %>
        <%= link_to tutor_path(current_tutor), class: "item" do %>
          <i class="desktop icon"></i> My dashboard
        <% end %>
        <% if current_tutor.admin? %>
          <%= link_to tutors_path, class: "item" do %>
            <i class="users icon"></i> All Tutors
          <% end %>
          <%= link_to new_tutor_path, class: "item" do %>
            <i class="user plus icon"></i> Add a new Tutor
          <% end %>
          <%= link_to students_path, class: "item" do %>
            <i class="users icon"></i> All Students
          <% end %>
          <%= link_to new_student_path, class: "item" do %>
            <i class="user plus icon"></i> Add a new Student
          <% end %>
          <%= link_to new_standard_path, class: "item" do %>
            <i class="building outline icon"></i> Add a new Class
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="item">
      <div class="small button">
        <%= link_to 'Logout', logout_tutor_path, class: "ui negative button", method: :delete %>
      </div>
    </div>
  </div>
  <% elsif current_student %>
    <%= link_to student_path(current_student), class: "item" do %>
      <i class="settings icon"></i> My profile
    <% end %>
    <div class="right menu">
      <div class="ui dropdown item">
        <%= current_student.name %> <i class="dropdown icon"></i>
        <div class="menu">
          <%= link_to edit_student_path(current_student), class: "item" do %>
            <i class="edit icon"></i> Edit profile
          <% end %>
          <%= link_to student_path(current_student), class: "item" do %>
            <i class="desktop icon"></i> My dashboard
          <% end %>
        </div>
      </div>
      <div class="item">
        <div class="small button">
          <%= link_to 'Logout', logout_student_path, class: "ui negative button", method: :delete %>
        </div>
      </div>
    </div>
  <% else %>
    <div class="right menu">
      <div class="item">
        <div class="small ui buttons">
          <%= link_to 'Tutor', login_tutor_path, class: "ui primary button" %>
          <div class="or"></div>
          <%= link_to 'Student', login_student_path, class: "ui positive button" %>
        </div>
      </div>
    </div>
<% end %>

<div class="ui middle aligned divided huge list">
  <% @tutors.each do |tutor| %>
    <div class="item">
      <% if !tutor.admin? %>
        <div class="right floated content">
          <%= link_to "Delete", tutor_path(tutor), method: :delete,
                    class: "ui negative button", data: { confirm: "Are you sure?"} %>
        </div>
      <% end %>
      <div class="right floated content">
        <%= link_to "Show", tutor_path(tutor), class: "ui primary button" %>
      </div>
      <i class="user orange icon"></i>
      <div class="content">
        <%= tutor.name %>
      </div>
    </div>
  <% end %>
</div>

<% if @lesson.errors.any? %>
  <div class="ui error message">
    <i class="close icon"></i>
    <div class="header">
      <%= pluralize(@lesson.errors.count, "error") %> prohibited Activity from being added:
    </div>
    <ul class="list">
      <% @lesson.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_for @lesson, html: { class: "ui form", role: 'form'} do |f| %>
  <div class="ui piled segment">
    <div class="field">
      <%= f.label :subject, "Subject" %>
      <div class="ui left icon input">
        <%= f.text_field :subject, placeholder: "Subject" %>
        <i class="book icon"></i>
      </div>
    </div>
    <div class="field">
      <%= f.label :topic, "Topic" %>
      <div class="ui left icon input">
        <%= f.text_field :topic, placeholder: "Topic" %>
        <i class="file icon"></i>
      </div>
    </div>
    <div class="field">
      <%= f.label :description, "Description" %>
      <div class="ui left icon input">
        <%= f.text_area :description, placeholder: "Write a description", rows: 2 %>
      </div>
    </div>
  </div>
  <div class="ui very padded segment">
    <%= f.label :body, "Activity" %>
    <%= f.rich_text_area :body %>
  </div>
  <div class="ui very relaxed segment">
    <%= f.label :video, "Activity related video" %>
    <%= f.file_field :video %>
  </div>
  <div class="ui very relaxed segment">
    <%= f.label :audio, "Activity related audio file" %>
    <%= f.file_field :audio %>
  </div>
    <%= f.submit class: "ui green button" %>
<% end %>

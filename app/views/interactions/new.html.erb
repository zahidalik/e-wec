<div class="ui two column stackable grid">
  <div class="column">
    <div class="ui center aligned raised brown segment">
        <button class="ui primary basic button"><strong>Tutor's Name: </strong><%= @interaction.lesson.classroom.tutor.name %></button>
        <button class="ui primary basic button"><strong>Class: </strong><%= @interaction.lesson.classroom.standard.name %></button>
        <button class="ui primary basic button"><strong>Subject: </strong><%= @interaction.lesson.classroom.subject.name %></button>
        <button class="ui primary basic button"><strong>Created at: </strong><%= @interaction.lesson.classroom.created_at.httpdate %></button>
    </div>

    <div class="ui center aligned teal segment">
      <button class="ui primary basic button"><strong>Topic: </strong><%= @lesson.topic %></button>
    </div>
    <div class="ui blue segment">
      <%= @lesson.lesson %>
    </div>

    <% if @lesson.video.present? %>
      <div class="ui center aligned inverted segment">
        <%= video_tag(url_for(@lesson.video), style: 'width:300px; height:200px', controls: '') %>
      </div>
    <% end %>

    <div class="ui two column grid">
      <div class="ui column">
        <% if @lesson.audio.present? %>
          <div class="ui center aligned inverted segment">
            <%= audio_tag(url_for(@lesson.audio), style: 'width:150px; height:45px', controls: '') %>
          </div>
        <% end %>
      </div>
      <div class="ui column">
        <% if @lesson.file.present? %>
          <div class="ui center aligned inverted segment">
            <%= link_to "Download the file", (url_for(@lesson.file)),
                class: "ui small primary button" %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
  <div class="column">
    <div>
      <div class="ui green segment">
        <h3 class="ui center aligned header">
          <%= current_student.name %> your interaction:
        </h3>
      </div>
      <%= render 'form' %>
    </div>
  </div>
</div>

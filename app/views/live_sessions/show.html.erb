<div class="ui fluid mini steps">
  <div class="step">
    <div class="content">
      <div class="title">Live Session</div>
      <div class="description">Welcome to the live session</div>
    </div>
  </div>
  <div class="step">
    <div class="content">
      <div class="title">Subject</div>
      <div class="description"><%= @live_session.classroom.subject.name %></div>
    </div>
  </div>
  <div class="step">
    <div class="content">
      <div class="title">Class</div>
      <div class="description"><%= @live_session.classroom.standard.name %></div>
    </div>
  </div>
  <div class="step">
    <div class="content">
      <div class="title">Tutor</div>
      <div class="description"><%= @live_session.classroom.tutor.name %></div>
    </div>
  </div>
</div>

<div class="ui center aligned header"  id="stop">
  <button class="ui red button" onclick="location.reload(true)">Stop Video Chat</button>
</div>

<div id="chat-room" style="display: none;">
  <div id="videos">
    <video id="self-view" autoplay></video>
    <video id="remote-view" autoplay></video>
  </div>
</div>

<div class="ui center aligned header">
  <button id="start" class="ui green button">Start Video Chat</button>
</div>

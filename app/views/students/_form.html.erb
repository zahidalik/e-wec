<% if @student.errors.any? %>
  <div class="ui error message">
    <i class="close icon"></i>
    <div class="header">
      <%= pluralize(@student.errors.count, "error") %> prohibited Student from being added:
    </div>
    <ul class="list">
      <% @student.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="ui piled segment">
  <%= form_for @student, html: { class: "ui form", role: 'form'} do |f| %>
    <div class="field">
      <%= f.label :name, "Username" %>
      <div class="ui left icon input">
        <%= f.text_field :name, placeholder: "Username" %>
        <i class="user icon"></i>
      </div>
    </div>
    <div class="field">
      <%= f.label :address, "Address" %>
      <div class="ui left icon input">
        <%= f.text_field :address, placeholder: "Kibaha ..." %>
        <i class="address book icon"></i>
      </div>
    </div>
    <div class="field">
      <%= f.label :contact, "Contact Number" %>
      <div class="ui left icon input">
        <%= f.text_field :contact, placeholder: "+255 ..." %>
        <i class="phone icon"></i>
      </div>
    </div>
    <div class="field">
      <%= f.label :gender, "Gender" %>
      <div class="ui left icon input">
        <%= f.text_field :gender, placeholder: "Male/Female" %>
        <i class="user icon"></i>
      </div>
    </div>
    <div class="field">
      <%= f.label :father_name, "Father's Name" %>
      <div class="ui left icon input">
        <%= f.text_field :father_name, placeholder: "Father's Name" %>
        <i class="male icon"></i>
      </div>
    </div>
    <div class="field">
      <%= f.label :mother_name, "Mother's Name" %>
      <div class="ui left icon input">
        <%= f.text_field :mother_name, placeholder: "Mother's Name" %>
        <i class="female icon"></i>
      </div>
    </div>
    <div class="field">
      <%= f.label :guardian_name, "Guardian Name" %>
      <div class="ui left icon input">
        <%= f.text_field :guardian_name, placeholder: "Guardian Name" %>
        <i class="user icon"></i>
      </div>
    </div>
    <div class="field">
      <%= f.label :password, "Password" %>
      <div class="ui left icon input">
        <%= f.password_field :password %>
        <i class="lock icon"></i>
      </div>
    </div>
    <% if !student_logged_in? %>
      <div class="field">
        <%= f.collection_check_boxes :standard_ids, Standard.all, :id, :name do |cb| %>
          <%= cb.label(class: "ui toggle checkbox") {cb.check_box(class: "hidden") + cb.text} %>
        <% end %>
      </div>
    <% end %>
    <%= f.submit class: "ui green submit button" %>
  <% end %>
</div>
